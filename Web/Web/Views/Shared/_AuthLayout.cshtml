 @using Resources 
@{
    Layout = null;
}


<!doctype html>
<html lang="fa">

<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="~/assets/img/favicon.png" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title> @(ViewBag.Title ??  Config.SiteNameFa ) </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <!--Bootstrap core CSS-->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />

    <link href="~/assets/Custom-Scrollbar/jquery.mCustomScrollbar.min.css" rel="stylesheet" />

    <!--Material Dashboard CSS    -->
    <link href="~/assets/css/material-dashboard.css" rel="stylesheet" />
    <!--CSS for Demo Purpose, don't include it in your project-->
    <link href="~/assets/css/demo.css" rel="stylesheet" />
    <!--Fonts and icons-->
    <link href="~/assets/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/assets/css/googleapis.css?materialIcon" rel="stylesheet" />
    <link href="~/assets/css/bootstrap-rtl.min.css" rel="stylesheet" />
    <link href="~/assets/css/my-rtl-custom-style.css" rel="stylesheet" />
    <link href="~/assets/animate/animate.css" rel="stylesheet" />

    <style>

        .navbar-brand img {
            display: inline-block;
            width: 70px;
        }



        .navbar-title {
            color: #fff;
        }

        .login-page > .content {
            padding-top: 20vh;
        }

        .navbar-wrapper {
            overflow: hidden;
            margin-top: 10px;
        }

            .navbar-wrapper .navbar-brand {
                padding-top: 0;
                padding-bottom: 0;
            }


            .navbar-wrapper .navbar-nav {
                list-style: none;
                color: #fff;
                padding-top: 15px;
            }


                .navbar-wrapper .navbar-nav li {
                    padding: 15px;
                }

                
@@media (max-width: 991px) 
{
    .navbar-wrapper{
        margin-top:0px;
    }

    .navbar-wrapper .navbar-nav {
        display:block;
        width:100%;
        padding-top:5px;
        padding-right:0;
    }
    
    .navbar-wrapper .navbar-nav li{
        display:inline-block;
        padding:15px 7px;
    }

}


    </style>


    @RenderSection("Styles", false)

    <script src="~/assets/js/jquery-3.6.3.min.js" type="text/javascript"></script>

</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top text-white">
        <div class="container">
            <div class="navbar-wrapper text-center">
                <img src="~/assets/img/banner.jpg" />

                @*<a class="navbar-brand" href="/">
                    <img src="~/assets/img/logo.png" alt="@Config.SiteNameFa" />
                    <b class="navbar-title"> @Config.SiteNameFa </b>
                </a>*@

                @*<ul class="navbar-nav">
                <li class="nav-item ">
                        <a asp-controller="Authentication" asp-action="index" asp-area="" class="nav-link">
                            <i class="material-icons">fingerprint</i>
                            ورود
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Authentication" asp-action="register" asp-area="" class="nav-link">
                            <i class="material-icons">person_add</i>
                            ثبت نام
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Forgetpassword" asp-action="index" asp-area="" class="nav-link">
                            <i class="material-icons">lock</i>
                            فراموشی کلمه عبور
                        </a>
                </ul>*@
            </div>
        </div>
    </nav>





    <div class="wrapper wrapper-full-page">
        <div class="full-page" filter-color="black" data-image="/assets/img/bg3.jpg">
            <div class="content">
                <div class="container">

                    <div class="row">
                        @RenderBody()
                    </div>


                </div>
            </div>


            <footer class="footer">
                <div class="container">
                    <p class="copyright">
                        &copy;
                        <script>
                            document.write(new Date().getFullYear())
                        </script>
                        <a href="#"> @Config.SiteNameFa </a>
                    </p>
                </div>
            </footer>

        </div>
    </div>




    <!--   Core JS Files   -->
    <script src="~/assets/js/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/assets/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/assets/js/material.min.js" type="text/javascript"></script>
    @*<script src="~/assets/js/perfect-scrollbar.jquery.min.js" type="text/javascript"></script>*@
    <script src="~/assets/Custom-Scrollbar/jquery.mCustomScrollbar.concat.min.js"></script>

    <!-- Forms Validations Plugin -->
    <script src="~/assets/js/jquery.validate.min.js"></script>
    <script src="~/assets/js/jquery.validate.error-messages.js"></script>

    <!--  Notifications Plugin    -->
    <script src="~/assets/js/bootstrap-notify.js"></script>
    <!-- Select Plugin -->
    <script src="~/assets/js/jquery.select-bootstrap.js"></script>
    <!-- Sweet Alert 2 plugin -->
    <script src="~/assets/js/sweetalert2.js"></script>
    <!--	Plugin for Fileupload, full documentation here: http://www.jasny.net/bootstrap/javascript/#fileinput -->
    <script src="~/assets/js/jasny-bootstrap.min.js"></script>
    <!-- TagsInput Plugin -->
    <script src="~/assets/js/jquery.tagsinput.js"></script>
    <!-- Material Dashboard javascript methods -->
    <script src="~/assets/js/material-dashboard.js"></script>
    <script src="~/assets/js/demo.js"></script>
    <script src="~/assets/ETS-panel.js"></script>
    <script src="~/assets/main.js"></script>
    
    @RenderSection("Scripts", false)

    <script type="text/javascript">
        $().ready(function () {
            demo.checkFullPageBackgroundImage();

            setTimeout(function () {
                // after 1000 ms we add the class animated to the login/register card
                $('.card').removeClass('card-hidden');
            },
                700);
        });

    </script>
</body>

</html>


