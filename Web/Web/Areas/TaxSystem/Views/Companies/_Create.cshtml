@using Application.Features.Web.Companies;
@model CompanyCreateCommand



<div class="modal-header">
    <button type="button" class="close" title="بستن پنجره" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title" id="modal5-label">
        افزودن شرکت جدید
    </h4>
</div>

<div class="modal-body row">

    <div class="col-md-12">
        <form asp-action="Create" class="create-form" onsubmit="return entity.create.save(event)">
            <div class="form-horizontal">

                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="error text-center text-danger create-error"></div>


                <div class="col-md-12">
                    <div class="form-group col-md-6">
                        <label asp-for="Name" class="control-label text-right col-md-12"></label>
                        <div class="col-md-12">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="NationalCode" class="control-label text-right col-md-12"></label>
                        <div class="col-md-12">
                            <input asp-for="NationalCode" class="form-control" />
                            <span asp-validation-for="NationalCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-6">
                        <label asp-for="EconomicCode" class="control-label text-right col-md-12"></label>
                        <div class="col-md-12">
                            <input asp-for="EconomicCode" class="form-control" />
                            <span asp-validation-for="EconomicCode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="ClientId" class="control-label text-right col-md-12"></label>
                        <div class="col-md-12">
                            <input asp-for="ClientId" class="form-control" />
                            <span asp-validation-for="ClientId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-6">
                        <label asp-for="PrivateKey" class="control-label text-right col-md-12"></label>
                        <div class="col-md-12">
                            <input asp-for="PrivateKey" class="form-control" />
                            <span asp-validation-for="PrivateKey" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                
                <div class="form-group col-md-12 text-center">
                    <button type="submit" class="btn btn-success">
                        <i class="material-icons">send</i>
                        ذخیره اطلاعات
                    </button>

                    <button type="button" class="btn btn-danger" data-dismiss="modal">بستن</button>
                </div>
            </div>

        </form>
    </div>
</div>


