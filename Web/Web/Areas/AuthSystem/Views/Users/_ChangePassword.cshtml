@using Application.Features.Web.Users;
@model UserChangePasswordCommand


<div class="modal-header">
    <button type="button" class="close" title="بستن پنجره" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title" id="modal5-label">
        تغییر کلمه عبور <span class="text-success">@ViewBag.FullName</span>
    </h4>
</div>

<div class="modal-body row">

    <div class="col-md-12">
        <form asp-action="ChangePassword" class="change-pass-form" onsubmit="return entity.changePassword.save(event)">
            <div class="form-horizontal">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="error text-center text-danger">@ViewBag.Error</div>
                <input type="hidden" asp-for="Id" />

                <div class="col-md-10 col-md-offset-1">
                    <div class="form-group col-md-12">
                        <label asp-for="Password" class="control-label text-right col-md-12"></label>
                        <div class="col-md-12">
                            <input type="Password" asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        <label asp-for="RePassword" class="control-label text-right col-md-12"></label>
                        <div class="col-md-12">
                            <input type="Password" asp-for="RePassword" class="form-control" />
                            <span asp-validation-for="RePassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-12 text-center">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-info">
                                <i class="material-icons">send</i>
                                تغییر کلمه عبور
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>








