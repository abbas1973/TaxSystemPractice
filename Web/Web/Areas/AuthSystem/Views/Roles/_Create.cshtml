@using Application.DTOs.Claims
@{
    var Claim = ViewData["Claim"] as ClaimDTO;
}

<div class="modal-header">
    <button type="button" class="close" title="بستن پنجره" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title" id="modal5-label">
        افزودن نقش جدید
    </h4>

    <div class="text-center">
        پرکردن فیلدهای ستاره دار الزامی است.
    </div>
</div>

<div class="modal-body row">

    <div class="col-md-12">
        <form asp-action="Create" class="create-form" onsubmit="return entity.create.save(event)">
            <div class="form-horizontal">

                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="error text-center text-danger create-error">@ViewBag.Error</div>

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label for="Title" class="control-label text-right col-md-12 required">عنوان نقش</label>
                        <div class="col-md-12">
                            <input id="Title" name="Title" class="form-control" />
                        </div>
                    </div>
                </div>


                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label for="Description" class="control-label text-right col-md-12">توضیحات نقش</label>
                        <div class="col-md-12">
                            <textarea id="Description" name="Description" class="form-control"></textarea>
                        </div>
                    </div>
                </div>



                <!--دسترسی ها-->
                <div class="form-group col-md-12">
                    <label class="control-label text-right col-md-12 required" style="padding-bottom:20px;">دسترسی های نقش را مشخص کنید : </label>
                    <div class="col-md-12 claim-section">
                        <partial name="_ClaimItem" model="Claim" />
                    </div>
                </div>


                <div class="form-group col-md-12 text-center">
                    <button type="submit" class="btn btn-success">
                        <i class="material-icons">send</i>
                        ذخیره اطلاعات
                    </button>

                    <button type="button" class="btn btn-danger" data-dismiss="modal">بستن</button>
                </div>
            </div>

        </form>
    </div>
</div>


